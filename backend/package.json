{
  "name": "backend",
  "version": "0.0.1",
  "description": "",
  "author": "Moshchenkov R.S.",
  "private": true,
  "license": "ISC",
  "scripts": {
    "start": "pnpm run build && node dist/server.js",
    "dev": "concurrently -k -p \"[{name}]\" -n \"TypeScript,App\" -c \"yellow.bold,cyan.bold\" \"pnpm run watch:ts\" \"pnpm exec nodemon --watch src --ext ts --exec ts-node src/server.ts\"",
    "watch:ts": "tsc -w",
    "build": "tsc -p tsconfig.json",
    "test": "pnpm run build && tsc -p test/tsconfig.json && c8 node --test -r ts-node/register \"test/**/*.ts\"",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@fastify/autoload": "^6.3.1",
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.1.0",
    "@fastify/helmet": "^13.0.1",
    "@fastify/sensible": "^6.0.3",
    "drizzle-orm": "^0.44.5",
    "fastify": "^5.6.1",
    "fastify-cli": "^7.4.0",
    "fastify-plugin": "^5.0.1",
    "pino-pretty": "^13.1.1",
    "postgres": "^3.4.7",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/pg": "^8.15.5",
    "@types/uuid": "^11.0.0",
    "c8": "^10.1.3",
    "concurrently": "^9.2.1",
    "dotenv": "^17.2.2",
    "drizzle-kit": "^0.31.5",
    "fastify-tsconfig": "^3.0.0",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2"
  },
  "files": [
    "dist"
  ],
  "main": "index.js",
  "directories": {
    "test": "test"
  }
}
