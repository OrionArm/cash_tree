{
  "name": "cash-tree",
  "private": true,
  "type": "module",
  "license": "ISC",
  "engines": {
    "pnpm": "^10.17.0",
    "node": ">=24.7.0"
  },
  "scripts": {
    "dev": "pnpm --parallel -r run dev",
    "build": "pnpm -r run build",
    "lint": "eslint 'frontend/src/**/*.{ts,tsx}'",
    "lint:fix": "eslint 'frontend/src/**/*.{ts,tsx}' --fix",
    "format": "prettier --write .",
    "dev:docker": "docker compose -f docker-compose.yml up --build",
    "prod:docker": "docker compose -f docker-compose.prod.yml up --build",
    "clear:docker": "docker-compose down --volumes",
    "prepare": "husky",
    "test:backend": "pnpm --filter backend test"
  },
  "packageManager": "pnpm@10.17.0+sha512.fce8a3dd29a4ed2ec566fb53efbb04d8c44a0f05bc6f24a73046910fb9c3ce7afa35a0980500668fa3573345bd644644fa98338fa168235c80f4aa17aa17fbef",
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.37.0",
    "@types/node": "^24.7.0",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^6.1.1",
    "eslint-plugin-react-refresh": "^0.4.23",
    "globals": "^16.4.0",
    "prettier": "^3.6.2",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3"
  },
  "lint-staged": {
    "backend/**/*.ts": [
      "bash -c 'cd backend && pnpm run typecheck'"
    ],
    "frontend/**/*.{ts,tsx}": [
      "bash -c 'cd frontend && pnpm run typecheck'"
    ]
  }
}
